{
  "name": "trump-game",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "npm run clean:ports && npm run start:all",
    "start:all": "concurrently \"npm run start:firebase\" \"npm run start:app\"",
    "start:app": "wait-on http://localhost:4000 && vite",
    "start:firebase": "firebase emulators:start --only database",
    "start:shell": "./start-dev.sh",
    "stop": "pkill -f \"firebase\\|vite\" || echo 'No processes to stop'",
    "clean:ports": "npm run stop && npm run kill:ports",
    "kill:ports": "(lsof -ti :8080 | xargs kill -9 2>/dev/null || true) && (lsof -ti :4000 | xargs kill -9 2>/dev/null || true) && (lsof -ti :9000 | xargs kill -9 2>/dev/null || true) && (lsof -ti :4400 | xargs kill -9 2>/dev/null || true) && (lsof -ti :4500 | xargs kill -9 2>/dev/null || true) && echo 'All ports cleared'",
    "firebase:emulators": "firebase emulators:start",
    "firebase:deploy": "npm run build && firebase deploy",
    "firebase:deploy:hosting": "npm run build && firebase deploy --only hosting"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/uuid": "^10.0.0",
    "firebase": "^12.0.0",
    "lucide-react": "^0.536.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "wait-on": "^8.0.4"
  }
}
